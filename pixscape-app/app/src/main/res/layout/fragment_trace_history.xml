<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.TraceHistoryFragment"
             android:background="@android:color/transparent">

    <include layout="@layout/empty_trace_history"
             android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton android:id="@+id/traces_settings"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentStart="true"
                         android:layout_centerVertical="true"
                         android:layout_marginStart="@dimen/box_margin"
                         android:background="@android:color/transparent"
                         app:srcCompat="@drawable/settings"/>

            <TextView android:id="@+id/traces_list_title"
                    android:text="@string/my_traces"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/chrono_text_size"
                      android:textColor="@color/scape_blue"
                      android:textAlignment="center"
                      android:layout_centerHorizontal="true"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/traces_list_title_dot"
                android:layout_width="@dimen/title_dot_size"
                android:layout_height="@dimen/title_dot_size"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@id/traces_list_title"
                tools:background="@color/scape_color"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <xyz.sangcomz.stickytimelineview.TimeLineRecyclerView
            android:id="@+id/trace_history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isSticky="true"/>

    </LinearLayout>

</FrameLayout>